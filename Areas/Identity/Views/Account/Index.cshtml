<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Users</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                @*<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                <a href="../../demo1/dist/index.html" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">eCommerce</li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Catalog</li>
                <!--end::Item-->
                </ul>*@
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-xxl">
            <!--begin::Products-->
            <div class="card card-flush">
                <!--begin::Card header-->
                <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <!--begin::Search-->
                        <div class="d-flex align-items-center position-relative my-1">
                            <i class="ki-duotone ki-magnifier fs-1 position-absolute ms-6"><span class="path1"></span><span class="path2"></span></i>
                            <input type="text" data-kt-docs-table-filter="search" id="user-search" class="form-control form-control-solid w-250px ps-15" placeholder="Search Users" />
                        </div>
                        <!--end::Search-->
                    </div>
                    <!--end::Card title-->
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-docs-table-toolbar="base">
                        <!--begin::Filter-->
                        @*<button type="button" class="btn btn-light-primary me-3" data-bs-toggle="tooltip" title="Coming Soon">
                            <i class="ki-duotone ki-filter fs-2"><span class="path1"></span><span class="path2"></span></i>
                            Filter
                        </button>*@
                        <!--end::Filter-->
                        <!--begin::Add user-->
                            <a asp-action="MainRegister" class="btn btn-primary" data-bs-toggle="tooltip">
                                <i class="ki-duotone ki-plus fs-2"></i>
                                Add User</a>
                        
                        <!--end::Add user-->
                    </div>
                    <!--end::Toolbar-->

                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Table-->
                    <div id="kt_ecommerce_products_table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_datatable_add_user">
                                <thead>
                                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                        @*<th class="w-10px pe-2">
                                            <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_datatable_add_user .form-check-input" value="1" />
                                            </div>
                                        </th>*@
                                        <th class="min-w-100px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Product: activate to sort column ascending" style="width: 116.328px;">User Name</th>
                                        <th class="text-end min-w-70px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Qty: activate to sort column ascending" style="width: 97.7188px;">Online</th>
                                        <th class="text-end min-w-200px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Qty: activate to sort column ascending" style="width: 97.7188px;">User Details</th>
                                        <th class="text-end min-w-100px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Price: activate to sort column ascending" style="width: 108.547px;">Last Login</th>
                                        <th class="text-end min-w-50px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Rating: activate to sort column ascending" style="width: 108.547px;">Count</th>
                                        <th class="text-end min-w-100px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 108.547px;">Status</th>
                                        <th class="text-end min-w-50px sorting" tabindex="0" aria-controls="kt_ecommerce_products_table" rowspan="1" colspan="1" aria-label="Rating: activate to sort column ascending" style="width: 108.547px;">Role</th>
                                        <th class="text-end min-w-70px sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 110.625px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600">
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd">
                                            @*<td>
                                                <div class="form-check form-check-sm form-check-custom form-check-solid">
                                                    <input class="form-check-input" type="checkbox" value="1">
                                                </div>
                                            </td>*@
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @Html.DisplayFor(modelItem => item.UserName)
                                                </div>
                                            </td>
                                            <td class="text-end pe-0">
                                                <span class="fw-bold">
                                                    @Html.DisplayFor(modelItem => item.IsOnline)
                                                </span>
                                            </td>
                                            <td class="text-end pe-0" data-order="23">
                                                <span class="fw-bold ms-3">
                                                    @Html.DisplayFor(modelItem => item.LastLoginDate)
                                                </span>
                                            </td>
                                            <td class="text-end pe-0">
                                                @Html.DisplayFor(modelItem => item.LoginCount)
                                            </td>
                                            <td class="text-end pe-0">
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td class="text-end pe-0">
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            
                                            <td class="text-end pe-0">
                                                <div class="btn-group" aria-label="Basic Basic example" role="group">
                                                    <secure-content asp-area="Identity" asp-controller="Account" asp-action="EditRegister">
                                                        <a asp-action="EditRegister" class="btn btn-icon btn-warning btn-active-light-primary w-30px h-30px me-3" title="Edit" asp-route-id="@item.Id">
                                                            <i class="ki-duotone ki-add-item fs-3">
                                                                <span class="path1"></span>
                                                                <span class="path2"></span>
                                                                <span class="path3"></span>
                                                            </i>
                                                        </a>
                                                    </secure-content>
                                                    &nbsp;

                                                    @if (item.IsActive == true)
                                                    {
                                                        <secure-content asp-area="Identity" asp-controller="Account" asp-action="Delete">
                                                            <a asp-action="Delete" class="btn btn-icon btn-danger btn-active-light-primary w-30px h-30px " title="InActive" asp-route-id="@item.Id">
                                                                <i class="ki-duotone ki-lock fs-3">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                    <span class="path3"></span>
                                                                    <span class="path4"></span>
                                                                    <span class="path5"></span>
                                                                </i>
                                                            </a>
                                                        </secure-content>
                                                    }
                                                    else
                                                    {
                                                        <secure-content asp-area="Identity" asp-controller="Account" asp-action="Activate">
                                                            <a asp-action="Activate" class="btn btn-icon btn-success btn-active-light-primary w-30px h-30px" title="Active" asp-route-id="@item.Id">
                                                                <i class="ki-duotone ki-message-edit fs-3">
                                                                    <span class="path1"></span>
                                                                    <span class="path2"></span>
                                                                </i>
                                                            </a>
                                                        </secure-content>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-icon btn-active-light-primary w-30px h-30px me-3" data-bs-toggle="modal" data-bs-target="#kt_modal_update_permission">
                                                    <i class="ki-duotone ki-setting-3 fs-3">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                        <span class="path4"></span>
                                                        <span class="path5"></span>
                                                    </i>
                                                </button>
                                                <button class="btn btn-icon btn-active-light-primary w-30px h-30px text-danger" data-kt-permissions-table-filter="delete_row">
                                                    <i class="ki-duotone ki-trash fs-3">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                        <span class="path4"></span>
                                                        <span class="path5"></span>
                                                    </i>
                                                </button>
                                            </td>
                                        </tr>
                                        
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--end::Table-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Products-->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
