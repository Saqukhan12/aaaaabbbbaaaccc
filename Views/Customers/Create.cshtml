@model DotNetCoreBoilerplate.Models.Customer

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <form asp-action="Create" id="createCustomer">
        <div class="heading text-yellow ">
            Customer Info
            <hr />
            <div class="custom-style-area" style="margin-left: 2rem !important;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="Name" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="Name" class="required form-control form-control-solid">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    @*<div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="Description" class=" fs-6 fw-semibold mb-2"></label>
                    <textarea asp-for="Description" class="form-control form-control-solid"></textarea>
                    @*<span asp-validation-for="Description" class="text-danger"></span>*@
                </div>
            </div>
        </div>
        <div class="address ">
            Address
            <hr />
            <div class="custom-style-area" style="margin-left: 2rem !important;">
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="Street" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="Street" class="form-control form-control-solid">
                    @*<span asp-validation-for="Street" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="City" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="City" class="form-control form-control-solid">
                    @*<span asp-validation-for="City" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="State" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="State" class="form-control form-control-solid">
                    @*<span asp-validation-for="State" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="ZipCode" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="ZipCode" class="form-control form-control-solid">
                    @*<span asp-validation-for="ZipCode" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="Phone" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="Phone" class="form-control form-control-solid">
                    @*<span asp-validation-for="Phone" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="Email" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="Email" class="form-control form-control-solid">
                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="InsertDate" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="InsertDate" class="form-control form-control-solid">
                    @*<span asp-validation-for="InsertDate" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="InsertUserId" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="InsertUserId" class="form-control form-control-solid">
                    @*<span asp-validation-for="InsertUserId" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="UpdateDate" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="UpdateDate" class="form-control form-control-solid">
                    @*<span asp-validation-for="UpdateDate" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="UpdateUserId" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="UpdateUserId" class="form-control form-control-solid">
                    @*<span asp-validation-for="UpdateUserId" class="text-danger"></span>*@
                </div>

                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="TenantId" class=" fs-6 fw-semibold mb-2"></label>
                    <input asp-for="TenantId" class="form-control form-control-solid">
                    @*<span asp-validation-for="TenantId" class="text-danger"></span>*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
