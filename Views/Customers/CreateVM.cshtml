                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.Name" class="control-label"></label>
                    <input asp-for="CustomerContact.Name" required class="form-control" />

                    <span asp-validation-for="CustomerContact.Name" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
