                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.Street" class="control-label"></label>
                    <input asp-for="CustomerContact.Street" class="form-control" />
                    <span asp-validation-for="CustomerContact.Street" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.City" class="control-label"></label>
                    <input asp-for="CustomerContact.City" class="form-control" />
                    <span asp-validation-for="CustomerContact.City" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.State" class="control-label"></label>
                    <input asp-for="CustomerContact.State" class="form-control" />
                    <span asp-validation-for="CustomerContact.State" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.ZipCode" class="control-label"></label>
                    <input asp-for="CustomerContact.ZipCode" class="form-control" />
                    <span asp-validation-for="CustomerContact.ZipCode" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.Phone" class="control-label"></label>
                    <input asp-for="CustomerContact.Phone" class="form-control" />
                    <span asp-validation-for="CustomerContact.Phone" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.Email" class="control-label"></label>
                    <input asp-for="CustomerContact.Email" class="form-control" />
                    <span asp-validation-for="CustomerContact.Email" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.InsertDate" class="control-label"></label>
                    <input asp-for="CustomerContact.InsertDate" class="form-control" />
                    <span asp-validation-for="CustomerContact.InsertDate" class="text-danger"></span>
                </div>
                @*  <div class="fv-row mb-3 fv-plugins-icon-container">
                <label asp-for="InsertUserId" class="control-label"></label>
                <input asp-for="InsertUserId" class="form-control" />
                <span asp-validation-for="InsertUserId" class="text-danger"></span>
                </div> *@
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <label asp-for="CustomerContact.UpdateDate" class="control-label"></label>
                    <input asp-for="CustomerContact.UpdateDate" class="form-control" />
                    <span asp-validation-for="CustomerContact.UpdateDate" class="text-danger"></span>
                </div>
                @* <div class="fv-row mb-3 fv-plugins-icon-container">
                <label asp-for="UpdateUserId" class="control-label"></label>
                <input asp-for="UpdateUserId" class="form-control" />
                <span asp-validation-for="UpdateUserId" class="text-danger"></span>
                </div>
                <div class="fv-row mb-3 fv-plugins-icon-container">
                <label asp-for="TenantId" class="control-label"></label>
                <input asp-for="TenantId" class="form-control" />
                <span asp-validation-for="TenantId" class="text-danger"></span>
                </div> *@
                <div class="form-group modal-footer flex-center">
                    <button type="submit" id="kt_modal_add_customer_contact_submit" class="btn btn-primary">
                        <span class="indicator-label">Submit</span>
                        <span class="indicator-progress">
                            Please wait...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <button type="reset" id="kt_modal_add_customer_contact_cancel" class="btn btn-light me-3">
                        <a asp-action="Index">Back to List</a>
                    </button>

                </div>
            </form>
        </div>
    </div>
    
</div>

