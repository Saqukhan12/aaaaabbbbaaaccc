<script>
    $(document).ready(function () {
        $('.add').on('click', function () {
            var parentTableId = $(this).data("id");
            var html = $('#' + parentTableId + ' tbody tr:first').html();
            var tr = '<tr>' + html + '</tr>';
            var res = tr.split("[0]").join("[" + ($('#' + parentTableId + ' > tbody > tr ').length) + "]");
            var res1 = res.split("_0_").join("_" + ($('#' + parentTableId + ' > tbody > tr ').length) + "_");
            var res2 = res1.split("(0)").join("(" + ($('#' + parentTableId + ' > tbody > tr ').length) + ")");
            $('#' + parentTableId + ' tbody').append(res2);

        });

        $('.delete').on('click', function () {
            var parentTableId = $(this).data("id");
            if ($('#' + parentTableId + ' tr').length > 2) {
                $('#' + parentTableId + ' tr:last').remove();
            }
        });
    });
</script>


