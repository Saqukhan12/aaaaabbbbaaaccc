<script>
    //Delete Random Rows anywhere just add Button to delete only the rest is automatic
    $(Document).ready(function () {
        $(document).on('click', 'button.deletebtn', function () {
            var parentTableId = $(this).data("id");
            var TableRow = $('#' + parentTableId + ' tbody tr:last').index();
            if (TableRow != 0) {
                $(this).closest('tr').remove();
            }
            else {
                alert("One row of the table is mandatory.");
            }
            c = 0;
            $('#' + parentTableId + ' tbody tr').each(function () {
                $('td', this).each(function () {
                    var NameValue = $(this).closest("td").find(":input").attr("name");
                    if (NameValue.match(/[0-9]/g).length == 1) {
                        $('input[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9]/, c));
                        $('select[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9]/, c));
                        $(this).find("span").attr("data-valmsg-for", NameValue.replace(/[0-9]/, c));
                    }
                    if (NameValue.match(/[0-9]/g).length == 2) {
                        $('input[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9][0-9]/, c));
                        $('select[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9][0-9]/, c));
                        $(this).find("span").attr("data-valmsg-for", NameValue.replace(/[0-9][0-9]/, c));
                    }
                    else if (NameValue.match(/[0-9]/g).length == 3) {
                        $('input[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9][0-9][0-9]/, c));
                        $('select[name$="' + NameValue + '"]').attr("name", NameValue.replace(/[0-9][0-9][0-9]/, c));
                        $(this).find("span").attr("data-valmsg-for", NameValue.replace(/[0-9][0-9][0-9]/, c));
                    }
                });
                c++;
            });
            alert("Record Deleted!");
        });
    });

    $(document).on('click', 'button.deletebtnedit', function () {
        var parentTableId = $(this).data("id");
        var TableRow = $('#' + parentTableId + ' tbody tr:last').index();
        if (TableRow != 0) {
            $(this).closest('tr').remove();
        }
        else {
            alert("One row of the table is mandatory.");
        }
    });

    $(document).ready(function () {
        $("input").attr("autocomplete", "off");
    });
</script>

